{
  "name": "http-request-plus",
  "version": "0.4.0",
  "license": "ISC",
  "description": "Small wrapper around {http,https}.request()",
  "keywords": [
    "http",
    "https",
    "request"
  ],
  "homepage": "https://github.com/JsCommunity/http-request-plus",
  "bugs": "https://github.com/JsCommunity/http-request-plus/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/JsCommunity/http-request-plus"
  },
  "author": {
    "name": "Julien Fontanet",
    "email": "julien.fontanet@isonoe.net"
  },
  "preferGlobal": false,
  "main": "dist/",
  "bin": {},
  "files": [
    "dist/"
  ],
  "engines": {
    "node": ">=4"
  },
  "dependencies": {
    "is-redirect": "^1.0.0",
    "lodash": "^4.17.4",
    "promise-toolbox": "^0.9.5"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.0.2",
    "babel-plugin-lodash": "^3.2.11",
    "babel-preset-env": "^1.6.1",
    "babel-preset-stage-3": "^6.24.1",
    "cross-env": "^5.1.1",
    "dependency-check": "^2.9.1",
    "husky": "^0.14.3",
    "jest": "^21.2.1",
    "rimraf": "^2.6.2",
    "standard": "^10.0.3"
  },
  "scripts": {
    "build": "cross-env NODE_ENV=production babel --source-maps --out-dir=dist/ src/",
    "commitmsg": "npm test",
    "dev": "cross-env NODE_ENV=development babel --watch --source-maps --out-dir=dist/ src/",
    "dev-test": "jest --bail --watch",
    "posttest": "standard && dependency-check ./package.json",
    "prebuild": "rimraf dist/",
    "predev": "npm run prebuild",
    "prepublish": "npm run build",
    "test": "jest"
  },
  "babel": {
    "env": {
      "test": {
        "ignore": null
      }
    },
    "ignore": "*.spec.js",
    "plugins": [
      "lodash"
    ],
    "presets": [
      [
        "env",
        {
          "targets": {
            "node": 4
          }
        }
      ],
      "stage-3"
    ]
  },
  "jest": {
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src"
    ],
    "testRegex": "\\.spec\\.js$"
  },
  "standard": {
    "ignore": [
      "dist"
    ],
    "parser": "babel-eslint"
  }
}
